    <script>
        let currentFeeId = null;
        let paymentCheckInterval = null;
        let countdownInterval = null;
        let timeLeft = 120; // 2 ph√∫t = 120 gi√¢y
        const circle = document.querySelector('.countdown-circle .progress');
        const radius = circle.r.baseVal.value;
        const circumference = radius * 2 * Math.PI;

        circle.style.strokeDasharray = `${circumference} ${circumference}`;
        circle.style.strokeDashoffset = circumference;

        function setProgress(percent) {
            const offset = circumference - (percent / 100 * circumference);
            circle.style.strokeDashoffset = offset;
        }

        function showPaymentModal(feeId, amount, feeType) {
            console.log('Opening payment modal for fee:', feeId);

            // C·∫≠p nh·∫≠t th√¥ng tin kho·∫£n thu
            document.getElementById('feeType').textContent = feeType;
            const formattedAmount = parseInt(amount).toLocaleString('vi-VN');
            document.getElementById('feeAmount').textContent = formattedAmount + ' VNƒê';
            document.getElementById('exactAmount').textContent = amount; // Hi·ªÉn th·ªã s·ªë ti·ªÅn ch√≠nh x√°c kh√¥ng c√≥ d·∫•u ph·∫©y

            // Reset th·ªùi gian v√† v√≤ng tr√≤n
            timeLeft = 120;
            setProgress(100);
            updateCountdown();

            // Hi·ªÉn th·ªã modal
            const modal = document.getElementById('paymentModal');
            const status = document.getElementById('paymentStatus');

            modal.style.display = 'block';
            status.style.display = 'block';
            status.className = 'payment-status';
            status.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> ƒêang ki·ªÉm tra tr·∫°ng th√°i thanh to√°n...';

            currentFeeId = feeId;

            // B·∫Øt ƒë·∫ßu ƒë·∫øm ng∆∞·ª£c
            startCountdown();

            // B·∫Øt ƒë·∫ßu ki·ªÉm tra tr·∫°ng th√°i thanh to√°n
            startPaymentCheck();
        }

        function updateCountdown() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            document.getElementById('countdown').textContent =
                `${minutes}:${seconds.toString().padStart(2, '0')}`;

            // C·∫≠p nh·∫≠t v√≤ng tr√≤n
            const percent = (timeLeft / 120) * 100;
            setProgress(percent);
        }

        function startCountdown() {
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }

            countdownInterval = setInterval(() => {
                timeLeft--;
                updateCountdown();

                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    clearInterval(paymentCheckInterval);
                    const status = document.getElementById('paymentStatus');
                    status.className = 'payment-status error';
                    status.innerHTML = '<i class="fas fa-exclamation-circle mr-2"></i> H·∫øt th·ªùi gian thanh to√°n!';

                    setTimeout(() => {
                        closePaymentModal();
                    }, 2000);
                }
            }, 1000);
        }

        function closePaymentModal() {
            console.log('Closing payment modal');

            const modal = document.getElementById('paymentModal');
            const status = document.getElementById('paymentStatus');

            modal.style.display = 'none';
            status.style.display = 'none';
            currentFeeId = null;

            if (paymentCheckInterval) {
                clearInterval(paymentCheckInterval);
                paymentCheckInterval = null;
            }

            if (countdownInterval) {
                clearInterval(countdownInterval);
                countdownInterval = null;
            }
        }

        function startPaymentCheck() {
            if (paymentCheckInterval) {
                clearInterval(paymentCheckInterval);
            }

            paymentCheckInterval = setInterval(() => {
                if (!currentFeeId || timeLeft <= 0) return;

                console.log('Checking payment status for fee:', currentFeeId);

                fetch(`/user/fee/${currentFeeId}/check-status`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Payment status response:', data);
                        const status = document.getElementById('paymentStatus');
                        const remainingAmount = document.getElementById('remainingAmount');

                        if (data.status === 'ƒë√£ thanh to√°n') {
                            status.className = 'payment-status success';
                            status.innerHTML = '<i class="fas fa-check-circle mr-2"></i> Thanh to√°n th√†nh c√¥ng!';
                            remainingAmount.style.display = 'none';

                            clearInterval(paymentCheckInterval);
                            paymentCheckInterval = null;

                            if (countdownInterval) {
                                clearInterval(countdownInterval);
                                countdownInterval = null;
                            }

                            setTimeout(() => {
                                closePaymentModal();
                                location.reload();
                            }, 2000);
                        } else if (data.paidAmount && data.paidAmount < data.totalAmount) {
                            // Hi·ªÉn th·ªã s·ªë ti·ªÅn c√≤n thi·∫øu
                            const remaining = data.totalAmount - data.paidAmount;
                            status.className = 'payment-status warning';
                            status.innerHTML = '<i class="fas fa-exclamation-circle mr-2"></i> ƒê√£ nh·∫≠n ƒë∆∞·ª£c m·ªôt ph·∫ßn thanh to√°n';

                            remainingAmount.style.display = 'block';
                            document.getElementById('remainingValue').textContent = remaining.toLocaleString('vi-VN');

                            // D·ª´ng ƒë·∫øm ng∆∞·ª£c khi ƒë√£ nh·∫≠n ƒë∆∞·ª£c m·ªôt ph·∫ßn thanh to√°n
                            if (countdownInterval) {
                                clearInterval(countdownInterval);
                                countdownInterval = null;
                            }
                        }
                    })
                    .catch(error => {
                        if (timeLeft > 0) {
                            console.error('Payment status check error:', error);
                            return;
                        }

                        console.error('Payment status check error:', error);
                        const status = document.getElementById('paymentStatus');
                        status.className = 'payment-status error';
                        status.innerHTML = '<i class="fas fa-exclamation-circle mr-2"></i> C√≥ l·ªói x·∫£y ra khi ki·ªÉm tra tr·∫°ng th√°i thanh to√°n';
                    });
            }, 5000);
        }

        function payRemaining() {
            // Reset th·ªùi gian v√† v√≤ng tr√≤n cho ph·∫ßn thanh to√°n c√≤n l·∫°i
            timeLeft = 120;
            setProgress(100);
            updateCountdown();

            const status = document.getElementById('paymentStatus');
            status.className = 'payment-status';
            status.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> ƒêang ki·ªÉm tra tr·∫°ng th√°i thanh to√°n...';

            // ·∫®n ph·∫ßn hi·ªÉn th·ªã s·ªë ti·ªÅn c√≤n thi·∫øu
            document.getElementById('remainingAmount').style.display = 'none';

            // B·∫Øt ƒë·∫ßu ƒë·∫øm ng∆∞·ª£c m·ªõi
            startCountdown();

            // Ti·∫øp t·ª•c ki·ªÉm tra tr·∫°ng th√°i thanh to√°n
            startPaymentCheck();
        }

        // Close modal when clicking outside
        window.onclick = function (event) {
            const modal = document.getElementById('paymentModal');
            if (event.target === modal) {
                closePaymentModal();
            }
        }
    </script>
